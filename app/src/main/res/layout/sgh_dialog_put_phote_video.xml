<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_put_photo"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/my_video_dialog_shape"
        android:gravity="center"
        android:text="图片"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bottom_main" />

    <Button
        android:id="@+id/btn_put_video"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@color/dack_white"
        android:gravity="center"
        android:text="视频"
        android:textColor="@color/comment_color"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <Button
        android:id="@+id/btn_put_cancel"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/my_video_dialog_shape"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/comment_color"
        android:textSize="18sp" />

</LinearLayout>