<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/lay_my_bt"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
            <com.shengui.app.android.shengui.android.ui.utilsview.CircleImageView
                android:id="@+id/personInfoIv"
                android:layout_width="36dp"
                android:layout_marginLeft="@dimen/tenDp"
                android:layout_centerVertical="true"
                android:layout_height="36dp"
                android:src="@drawable/default_pictures"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/phoneIv"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/product_detail_person_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="@dimen/tenDp"
                android:layout_alignParentRight="true"
                android:visibility="visible"
                android:id="@+id/confirmText"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/activity_quanzi_confirm"
                android:gravity="center"
                android:text="分享"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="25dp" />
           <ImageView
               android:visibility="gone"
               android:id="@+id/changeSelectImage"
               android:layout_marginRight="@dimen/tenDp"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:background="@drawable/quanzi_unselect_images"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/otherinfo"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/confirmText"
                android:layout_toRightOf="@id/personInfoIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#2e2e2e"
                    android:textSize="11sp"
                    android:id="@+id/nameTextView"
                    android:text="这是名字"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/typeImage"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/male"
                        android:layout_toRightOf="@id/nameTextView"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />
                    <TextView
                        android:textColor="@color/shenguiappcolor"
                        android:textSize="11sp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@id/nameTextView"
                        android:id="@+id/addressTextView"
                        android:text="北京市朝阳区"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>