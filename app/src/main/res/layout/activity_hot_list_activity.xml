<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.shengui.app.android.shengui.MainActivity">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:id="@+id/finishLayoutsd"
            android:layout_width="50dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/backImageview"
                android:layout_marginLeft="@dimen/tenDp"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/tenDp"
                android:background="@drawable/back_detault_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:textColor="#9b9b9b"
            android:textSize="15sp"
            android:id="@+id/createTextView"
            android:layout_marginRight="@dimen/tenDp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="创建"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:weightSum="4"
            android:id="@+id/myTabLayout"
            android:orientation="horizontal"
            android:layout_width="244dp"
            android:layout_height="44dp">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/hotlayout"
                    android:text="热门"
                    android:textSize="15sp"
                    android:textColor="@color/shenguiappcolor"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <View
                    android:layout_alignParentBottom="true"
                    android:id="@+id/hotlineView"
                    android:background="@color/shenguiappcolor"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            
            </RelativeLayout>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="1dp"
                android:background="#f2f0f1"
                android:layout_height="15dp"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="组织"
                    android:textSize="15sp"
                    android:textColor="@color/titlecolor"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/originzationLayout" />
                <View
                    android:layout_alignParentBottom="true"
                    android:id="@+id/origiazationlineView"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            </RelativeLayout>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="1dp"
                android:background="#f2f0f1"
                android:layout_height="15dp"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/allLayout"
                    android:text="全部"
                    android:textSize="15sp"
                    android:textColor="@color/titlecolor"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <View
                    android:layout_alignParentBottom="true"
                    android:id="@+id/alllineView"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            </RelativeLayout>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="1dp"
                android:background="#f2f0f1"
                android:layout_height="15dp"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/mineLayout"
                    android:text="我的"
                    android:textSize="15sp"
                    android:textColor="@color/titlecolor"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <View
                    android:layout_alignParentBottom="true"
                    android:id="@+id/minelineView"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            </RelativeLayout>

        
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@id/topLayout"
        android:layout_width="match_parent"
        android:background="#f2f0f1"
        android:layout_height="7dp"/>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/line"
        android:id="@+id/my_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>
