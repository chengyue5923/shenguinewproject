<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:contaxt="com.hengrong.hutao.android.ui.views.dialog.dialog.BottomDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ht_dialog_bottom_bg"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:id="@+id/ht_lookUpPicture"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/ht_fortyDp"-->
            <!--android:background="@drawable/lay_my_bt"-->
            <!--android:gravity="center"-->
            <!--android:text="@string/ht_lookUpPicture"-->
            <!--android:textSize="14sp" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/ht_diverLine" />

        <TextView
            android:id="@+id/ht_takePhoto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lay_my_bt"
            android:gravity="center"
            android:text="@string/ht_takePhoto"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/ht_diverLine" />

        <TextView
            android:id="@+id/ht_album"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lay_my_bt"
            android:gravity="center"
            android:text="@string/ht_album"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/ht_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/ht_dialog_bottom_bg"
        android:gravity="center"
        android:text="@string/ht_dialog_cancel"
        android:textSize="14sp" />
</LinearLayout>