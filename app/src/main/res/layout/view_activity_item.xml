<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/tenDp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_marginLeft="@dimen/tenDp"
        android:layout_marginTop="@dimen/tenDp"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="100dp"
            android:layout_height="80dp"

            android:background="@drawable/default_pictures"
            android:scaleType="centerCrop"

        />
        <ImageView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/videoImageView"
            android:layout_width="wrap_content"
            android:background="@drawable/video_iamge"
            android:layout_height="wrap_content"
        />

    </RelativeLayout>

    <TextView
        android:id="@+id/priductTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/tenDp"
        android:layout_marginTop="13dp"
        android:text=""
        android:textColor="@color/producttexts"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/productTitleNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tenDp"
        android:layout_marginRight="@dimen/tenDp"
        android:layout_marginTop="@dimen/tenDp"
        android:layout_toLeftOf="@id/priductTimeText"
        android:layout_toRightOf="@id/imageLayout"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/producttitletexts"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/productBuyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productTitleNameText"
        android:layout_marginLeft="@dimen/tenDp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/imageLayout"
        android:background="@drawable/activity_product_title"
        android:text=""
        android:textColor="@color/white"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/productBuyTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productTitleNameText"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/productBuyText"
        android:background="@drawable/activity_product_type"
        android:text=""
        android:textColor="@color/white"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/detailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/productBuyText"
        android:layout_marginLeft="@dimen/tenDp"
        android:layout_marginRight="@dimen/tenDp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/imageLayout"
        android:ellipsize="end"
        android:gravity="bottom"
        android:singleLine="true"
        android:lines="1"
        android:text=""
        android:textColor="#9c9c9c"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageLayout"
        android:layout_marginBottom="@dimen/tenDp"
        android:layout_marginLeft="@dimen/tenDp"
        android:layout_marginTop="@dimen/tenDp"
        android:text=""
        android:textColor="#393939"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/texttelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/detailTextView"
        android:layout_below="@id/detailTextView"
        android:layout_marginTop="@dimen/tenDp"
        android:drawableLeft="@drawable/product_detail_person_phone"
        android:drawablePadding="5dp"
        android:text=""
        android:textColor="#393939"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textAddressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/detailTextView"
        android:layout_marginBottom="@dimen/tenDp"
        android:layout_marginRight="@dimen/tenDp"
        android:layout_marginTop="@dimen/tenDp"
        android:drawableLeft="@drawable/quanzi_address_image"
        android:drawablePadding="5dp"
        android:text=""
        android:textColor="#393939"
        android:textSize="11sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/deleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/detailTextView"
        android:layout_marginBottom="@dimen/tenDp"
        android:layout_marginRight="@dimen/tenDp"
        android:layout_marginTop="@dimen/tenDp"
        android:text="删除"
        android:textColor="#e04243"
        android:textSize="11sp"
        android:visibility="gone" />


</RelativeLayout>