<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shengui.app.android.shengui.MainActivity">


    <RelativeLayout
        android:id="@+id/relayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SendTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/tenDp"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/searchlayout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tenDp"
            android:layout_marginRight="@dimen/fiveteenDp"
            android:layout_toLeftOf="@id/SendTextButton"
            android:background="@drawable/activity_search_layout">
            <ImageView
                android:id="@+id/image"
                android:layout_marginLeft="@dimen/twentyDp"
                android:layout_centerVertical="true"
                android:background="@drawable/search_page_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:imeOptions="actionSearch"
                android:maxLength="25"
                android:singleLine="true"
                android:id="@+id/edittext"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/image"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:hint="搜索圈子、龟蜜、帖子"
                android:textColor="#333333"
                android:textColorHint="#cdcdcd"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="#f2f0f1"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/Nonelayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="@dimen/tenDp"
            android:text="大家都在搜索:"
            android:textColor="#313131"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.shengui.app.android.shengui.android.ui.utilsview.MultipleTextViewGroup
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_rl"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            app:textSize="14sp"
            app:textWordMargin="10dp"
            app:textLineMargin="10dp"
            app:textColor="@color/shenguiappcolor"
            app:textBackground="@drawable/shape_tag_grey_with_border"
            app:textPaddingLeft="5dp"
            app:textPaddingRight="5dp"
            app:textPaddingTop="5dp"
            app:textPaddingBottom="5dp"
            app:overspread="false" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/searchResultlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/linesd"
                android:layout_below="@id/topLayout"
                android:layout_width="match_parent"
                android:background="#f2f0f1"
                android:layout_height="7dp"/>
            <RelativeLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:weightSum="3"
                    android:id="@+id/myTabLayout"
                    android:orientation="horizontal"
                    android:layout_width="244dp"
                    android:layout_height="44dp">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/hotlayout"
                            android:text="圈子"
                            android:textSize="15sp"
                            android:textColor="@color/shenguiappcolor"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <View
                            android:layout_alignParentBottom="true"
                            android:id="@+id/hotlineView"
                            android:background="@color/shenguiappcolor"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"/>

                    </RelativeLayout>
                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_width="1dp"
                        android:background="#f2f0f1"
                        android:layout_height="15dp"/>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="龟蜜"
                            android:textSize="15sp"
                            android:textColor="@color/titlecolor"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/originzationLayout" />
                        <View
                            android:layout_alignParentBottom="true"
                            android:id="@+id/origiazationlineView"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"/>
                    </RelativeLayout>
                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_width="1dp"
                        android:background="#f2f0f1"
                        android:layout_height="15dp"/>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/allLayout"
                            android:text="帖子"
                            android:textSize="15sp"
                            android:textColor="@color/titlecolor"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <View
                            android:layout_alignParentBottom="true"
                            android:id="@+id/alllineView"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_below="@id/topLayout"
                android:layout_width="match_parent"
                android:background="#f2f0f1"
                android:layout_height="7dp"/>
            <android.support.v4.view.ViewPager
                android:layout_below="@id/line"
                android:id="@+id/my_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="@color/white"
            android:id="@+id/seatLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/quanLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/searchquanzi"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_centerVertical="true"
                    android:text="搜索："
                    android:textSize="14sp"
                    android:textColor="#242424"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/content"
                    android:layout_toRightOf="@id/searchquanzi"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/shenguiappcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@id/content"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_centerVertical="true"
                    android:text="圈子"
                    android:textSize="14sp"
                    android:textColor="#242424"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#f2f0f1"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>
            <RelativeLayout
                android:id="@+id/miLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/searchqumizi"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_centerVertical="true"
                    android:text="搜索："
                    android:textSize="14sp"
                    android:textColor="#242424"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/micentent"
                    android:layout_toRightOf="@id/searchqumizi"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/shenguiappcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@id/micentent"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_centerVertical="true"
                    android:text="龟蜜"
                    android:textSize="14sp"
                    android:textColor="#242424"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#f2f0f1"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>
            <RelativeLayout
                android:id="@+id/tielayout"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/seartiezi"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_centerVertical="true"
                    android:text="搜索："
                    android:textSize="14sp"
                    android:textColor="#242424"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tiecontent"
                    android:layout_toRightOf="@id/seartiezi"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/shenguiappcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@id/tiecontent"
                    android:layout_marginLeft="@dimen/tenDp"
                    android:layout_centerVertical="true"
                    android:text="帖子"
                    android:textSize="14sp"
                    android:textColor="#242424"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#f2f0f1"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
