<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center_horizontal"
                android:text="筛选条件"
                android:textColor="#2a2a2a"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/cancelTextView"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="取消"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/tenDp"
                android:textColor="#2e2e2e"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/sellTextView"
                android:background="@drawable/activity_select_item_unselect"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="出售"
                android:textSize="14sp"
                android:textColor="@color/shenguiappcolor"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/BuyTextView"
                android:background="@drawable/activity_select_item_unselect"
                android:layout_marginLeft="26dp"
                android:gravity="center"
                android:text="求购"
                android:textSize="14sp"
                android:textColor="@color/shenguiappcolor"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="26dp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/addressSelectLayout"
        android:background="@drawable/activity_select_button_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:text="地区筛选"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/tenDp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="@dimen/tenDp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_tappable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/typeSelectLayout"
        android:background="@drawable/activity_select_button_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:text="品种筛选"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/tenDp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="@dimen/tenDp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_tappable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/text"
        android:layout_marginTop="12dp"
        android:text="当前选择："
        android:textSize="15sp"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/tenDp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="@dimen/tenDp"
            android:layout_alignParentRight="true"
            android:id="@+id/itemTextivew"
            android:background="@drawable/activity_select_item_select"
            android:text="清空"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:minHeight="30dp"/>
        <com.shengui.app.android.shengui.android.ui.utilsview.NoScrollGridView
            android:layout_marginRight="@dimen/tenDp"
            android:layout_toLeftOf="@id/itemTextivew"
            android:layout_marginLeft="@dimen/tenDp"
            android:layout_marginTop="@dimen/tenDp"
            android:layout_marginBottom="@dimen/tenDp"
            android:background="@color/white"
            android:id="@+id/gview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:columnWidth="80dp"
            android:verticalSpacing="@dimen/tenDp"
            android:stretchMode="columnWidth"
        />
        <!--<RelativeLayout-->
            <!--android:layout_marginRight="@dimen/tenDp"-->
            <!--android:layout_marginLeft="@dimen/tenDp"-->
            <!--android:layout_marginTop="@dimen/tenDp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--<TextView-->
                <!--android:background="@drawable/activity_border_text"-->
                <!--android:text="中山市"-->
                <!--android:textSize="15sp"-->
                <!--android:textColor="#333333"-->
                <!--android:gravity="center"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="30dp" />-->
        <!--</RelativeLayout>-->
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/tenDp"
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/SureButtonView"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="确认筛选"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/shenguiappcolor"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


</LinearLayout>
